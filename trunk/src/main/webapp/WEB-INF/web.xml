<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <!-- =================================================================== -->
    <!--                  Display Name and Description                       -->
    <!-- =================================================================== -->
    <display-name>openhandle</display-name>
    <description>Simple web application to get handle values and return as RDF/XML.</description>

    <!-- =================================================================== -->
    <!--                              Filters                                -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                         Filter Mappings                             -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                             Servlets                                -->
    <!-- =================================================================== -->
    <servlet>
        <servlet-name>velocity</servlet-name>
        <servlet-class>org.apache.velocity.tools.view.servlet.VelocityViewServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>openhandle</servlet-name>
        <servlet-class>net.handle.servlet.OpenHandleServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <!-- =================================================================== -->
    <!--                         Servlet Mappings                            -->
    <!-- =================================================================== -->
    <servlet-mapping>
        <servlet-name>velocity</servlet-name>
        <url-pattern>*.rdf</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>openhandle</servlet-name>
        <url-pattern>/handle</url-pattern>
    </servlet-mapping>

    <!-- =================================================================== -->
    <!--                             Listeners                               -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                Application Context Parameters                       -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                           Welcome Files                             -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                      Session Configuration                          -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                          Mime Mappings                              -->
    <!-- =================================================================== -->
    <mime-mapping>
        <extension>rdf</extension>
        <mime-type>application/rdf+xml</mime-type>
    </mime-mapping>

    <!-- =================================================================== -->
    <!--                       Resource References                           -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                        Security Constraints                         -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                          Security Roles                             -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                        Login Configurations                         -->
    <!-- =================================================================== -->


    <!-- =================================================================== -->
    <!--                               Icons                                 -->
    <!-- =================================================================== -->

</web-app>